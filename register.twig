{% extends "base.twig" %}

{% block content %}

    <form class="form-register" method="POST">
        <h2 class="form-register-heading">Register</h2>

        {% if error %}
            <div class="alert alert-danger" role="alert">
                {{ error }}
            </div>
        {% endif %}

        <input type="text" class="form-control mt-2" placeholder="username" name="username" required="" autofocus="">

        <input type="password" class="form-control mt-2" placeholder="password" name="password" required="">

        <button class="btn btn-lg btn-primary btn-block mt-2" type="submit">Register</button>
    </form>
{% endblock %}
